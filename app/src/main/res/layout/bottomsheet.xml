<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/report"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="Report"
            android:layout_marginLeft="20dp"
            android:textSize="21dp"
            android:layout_marginTop="2dp"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/block"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:layout_below="@+id/report"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="block"
            android:layout_marginLeft="20dp"
            android:textSize="21dp"
            android:layout_marginTop="2dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/unfriend"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:layout_below="@+id/block"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:text="Unfriend"
            android:layout_marginLeft="20dp"
            android:textSize="21dp"
            android:layout_marginTop="2dp"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/sharedphotos"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:layout_below="@+id/unfriend"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Shared Photos"
            android:layout_marginLeft="20dp"
            android:textSize="21dp"
            android:layout_marginTop="2dp"/>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/sharedvideos"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:layout_below="@+id/sharedphotos"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/sharedvideostext"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="Shared Videos"
            android:layout_marginLeft="20dp"
            android:textSize="21dp"
            android:layout_marginTop="2dp"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>