<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context=".AddPostActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mmlmlmlmlmmlmlmlml"
        android:layout_toEndOf="@+id/image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:textColor="@color/white"
        android:textSize="20dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_color"
        android:layout_marginTop="88dp">

        <EditText
            android:id="@+id/edittext"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:maxLines="17"
            android:fontFamily="sans-serif-light"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:hint="share your thoughts.."
            android:textSize="22dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true">


        <ImageView
            android:id="@+id/pencil"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/story_pencil"
            />


        <ImageView
            android:id="@+id/photo"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="90dp"
            android:src="@drawable/story_photo"
            />


        <ImageView
            android:id="@+id/camera"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="158dp"
            android:src="@drawable/story_camera"
            />

        <Button
            android:id="@+id/posttoall"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="300dp"
            android:text="Post"
            android:textStyle="italic"
            android:textColor="#0080FF"
            android:background="@drawable/post_button_custom"/>


    </RelativeLayout>


</RelativeLayout>