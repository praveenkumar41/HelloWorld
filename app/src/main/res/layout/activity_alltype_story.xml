<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context=".activity_alltype_story">


    <com.example.project2.PinchZoomImageView
        android:id="@+id/story_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/closephoto"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/closepost"
        android:layout_marginLeft="365dp"
        android:layout_marginTop="130dp"
        android:visibility="gone"
        android:background="@drawable/ripple4"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/phototext"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/storyfonts"
        android:layout_marginLeft="365dp"
        android:padding="3dp"
        android:visibility="gone"
        android:layout_marginTop="178dp"
        android:background="@drawable/ripple4"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/back"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="178dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/pro"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parveenkumar.m"
        android:layout_below="@+id/image"
        android:textColor="@color/white"
        android:padding="5dp"
        android:background="@drawable/black_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="20dp"
        android:layout_centerVertical="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="13.5dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cardimage"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_launcher_background"/>
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/textside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="74dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardtitle"
                    android:textSize="19sp"
                    android:textColor="@color/black"
                    android:text="hhhhhdhsdbdbshh"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardtitle1"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:text="hhhhhdhsdbdbshh"
                    android:textStyle="bold"/>

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="82dp">


            <TextView
                android:id="@+id/description"
                android:layout_width="300dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"
                android:layout_height="wrap_content"
                android:text=""
                android:autoLink="all"
                android:textColorLink="#1DA1F2"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"/>

            <RelativeLayout
                android:id="@+id/reel"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/description"
                android:layout_marginLeft="8dp">

                <com.example.project2.PinchZoomImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/imagebackground"
                    android:id="@+id/thumbnail"/>

                <com.example.project2.PinchZoomImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/imagebackground"
                    android:id="@+id/videothumbnail"/>

                <ImageView
                    android:id="@+id/clickplay"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/videoplaybutton"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>


            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/edlayout"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:background="@drawable/corner_layout"
        android:layout_height="460dp">


        <EditText
            android:id="@+id/ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="25dp"
            android:maxLines="15"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:text=""
            android:hint="share your thoughts.."/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="606dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/text"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/storyfonts"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/camera"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/story_cameras"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gallery"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="125dp"
            android:src="@drawable/storygallery"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/poll"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="180dp"
            android:src="@drawable/ic_baseline_poll_24"/>



    </RelativeLayout>

    <Button
        android:id="@+id/poststory"
        android:layout_width="75dp"
        android:layout_height="46dp"
        app:rippleColor="#F8FAFB"
        android:text="Post"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="608dp"
        android:layout_marginLeft="320dp"
        android:textColor="#1DA1F2"/>

</RelativeLayout>