<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_height="75dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cdremove"
        app:cardCornerRadius="15dp"
        app:cardElevation="1dp"
        android:layout_width="375dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        app:cardMaxElevation="1dp"
        android:foreground="?android:attr/selectableItemBackground"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageenter1"
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher_round" />


        <TextView
            android:id="@+id/un"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/imageenter1"
            android:layout_toRightOf="@+id/imageenter1"
            android:text="username"
            android:textSize="23dp" />

        <ImageView
            android:id="@+id/unblockoption"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/blocked"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="299dp"/>


    </androidx.cardview.widget.CardView>

</RelativeLayout>


