<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Music_Status">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/myid"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="120dp"
        android:src="@drawable/pro"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimaryDark"
        />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:layout_toEndOf="@+id/symbol"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="195dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D7E2ED">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="9dp"
                android:text="Shared Media"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/card1"
        android:id="@+id/l1"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp"
            android:src="@drawable/galleryphotos"/>


        <TextView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="photos"
            android:padding="6dp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            android:textSize="25dp"/>


        <TextView
            android:id="@+id/photocount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="186dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/l1"
        android:padding="5dp"
        android:id="@+id/l2"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp"
            android:src="@drawable/videofile"/>


        <TextView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="videos"
            android:padding="6dp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/videocount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="190dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/l2"
        android:padding="5dp"
        android:id="@+id/l3"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp"
            android:src="@drawable/linkfile"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="links"
            android:padding="6dp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="19dp"
            android:textSize="25dp"/>


        <TextView
            android:id="@+id/linkcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="212dp"/>



    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_below="@+id/l3"
        android:layout_height="55dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D7E2ED">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="9dp"
                android:textSize="25dp"/>


            <TextView
                android:id="@+id/messagecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(200)"
                android:layout_marginLeft="195dp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="21dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/block"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/card2"
        android:padding="6dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="block user"
            android:textSize="26dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/report"
        android:layout_width="match_parent"
        android:layout_below="@+id/block"
        android:padding="6dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="report user"
            android:textSize="26dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/report"
        android:padding="6dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete conversation"
            android:textSize="26dp"
            android:layout_marginLeft="8dp"
            android:textColor="#E30518"/>

    </LinearLayout>

</RelativeLayout>