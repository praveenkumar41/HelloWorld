<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AutomaticDeleteMessage">


    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="118dp"
        android:layout_marginTop="90dp">

    <TextView
        android:layout_width="270dp"
        android:layout_height="107dp"
        android:text="Turn On this button to delete messages automatically after viewing your message and the message will be deleted while you reply to the chat"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>

    <Switch
        android:id="@+id/switchdeletemessage"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="280dp"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
