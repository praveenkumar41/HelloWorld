<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/userprofilesetting"
        android:layout_width="400dp"
        android:layout_height="115dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/ic_launcher_round"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="praveen kumar"
            android:textSize="22dp"
            android:autoSizeTextType="uniform"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="23dp"/>

        <TextView
            android:id="@+id/anylover"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="djndkjdnnj"
            android:textSize="18dp"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="58dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/pp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Chats"
        android:textSize="25dp"
        android:autoSizeTextType="uniform"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="125dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/automaticdeletemessages"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_below="@+id/pp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/pp1"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text=" Automatically Delete Messages"
            android:textSize="18dp"
            android:autoSizeTextType="uniform"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"/>


    </androidx.cardview.widget.CardView>


</RelativeLayout>