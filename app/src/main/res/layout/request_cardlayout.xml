<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_height="64dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cdremove"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        android:layout_width="380dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageenter1"
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/ic_launcher_round" />


        <TextView
            android:id="@+id/un"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageenter1"
            android:layout_toRightOf="@+id/imageenter1"
            android:text="username"
            android:textStyle=""
            android:textColor="@color/black"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp" />

        <ProgressBar
            android:id="@+id/bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="319dp"
            android:indeterminateTint="@color/black"
            android:visibility="invisible"
            />


        <Button
            android:id="@+id/addrequestedfriend"
            android:layout_width="58dp"
            android:layout_height="25dp"
            android:layout_marginLeft="299dp"
            android:layout_marginTop="12dp"
            android:textSize="13dp"
            android:text="Accept"
            android:textColor="#0080FF"
            android:background="@drawable/light"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>