<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:padding="6dp"
        android:layout_marginTop="1dp">
    
        <TextView
            android:id="@+id/agotime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="15sp"
            android:layout_marginTop="22.5dp"
            android:layout_marginLeft="360dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/ic_launcher_background"/>
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/textside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:textSize="17sp"
                    android:layout_marginLeft="1dp"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@color/black"
                    android:text="hhhhhdhsdbdbshh"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title1"
                    android:textSize="14sp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginLeft="1dp"
                    android:textColor="@color/black"
                    android:text="hhhhhdhsdbdbshh"/>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/postbutton"
            android:layout_width="26dp"
            android:layout_height="22dp"
            android:layout_marginLeft="360dp"
            android:src="@drawable/ic_baseline_more_horiz_24"
            android:layout_marginTop="3dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp">

            <com.tylersuehr.socialtextview.SocialTextView
                android:id="@+id/description"
                android:layout_width="376dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                app:hashtagColor="#1DA1F2"
                app:mentionColor="#1DA1F2"
                app:urlColor="#1DA1F2"
                app:phoneColor="#1DA1F2"
                app:emailColor="#1DA1F2"
                app:linkModes="hashtag|mention|url|phone|email"/>


            <RelativeLayout
                android:id="@+id/reel"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/description"
                android:layout_marginLeft="5dp">



                <com.example.project2.PinchZoomImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/imagebackground"
                    android:id="@+id/thumbnail"/>

                <com.example.project2.PinchZoomImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/imagebackground"
                    android:id="@+id/videothumbnail"/>

                <ImageView
                    android:id="@+id/clickplay"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/videoplaybutton"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>


            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/liketab"
                android:layout_width="377dp"
                android:layout_marginLeft="11dp"
                android:padding="6dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reel">


                    <xyz.hanks.library.bang.SmallBangView
                        android:id="@+id/b1"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        app:circle_end_color="#ffbc00"
                        app:circle_start_color="#fa9651"
                        app:dots_primary_color="#fa9651"
                        android:layout_marginTop="0dp"
                        app:dots_secondary_color="#ffbc00">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/like"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/heart101" />

                    </xyz.hanks.library.bang.SmallBangView>

                <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2777"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="50dp"
                    android:textSize="16dp"/>


                <xyz.hanks.library.bang.SmallBangView
                    android:id="@+id/b3"
                    android:layout_width="30dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="285dp"
                    app:circle_end_color="#ffbc00"
                    app:circle_start_color="#fa9651"
                    app:dots_primary_color="#fa9651"
                    app:dots_secondary_color="#ffbc00">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/book"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/bookmark"/>

                </xyz.hanks.library.bang.SmallBangView>


                <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/comment"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="105dp"
                            android:src="@mipmap/ic_commentssss" />


                <TextView
                    android:id="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2277"
                    android:textSize="16dp"
                    android:layout_marginLeft="136dp"
                    android:layout_marginTop="8dp"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/share"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="208dp"
                    android:src="@drawable/sharepost"/>


            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/likedbyimage"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_below="@+id/liketab"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="3.5dp"
                android:src="@drawable/ic_launcher_background"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/likedbyimage1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_below="@+id/liketab"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="3.5dp"
                android:src="@drawable/ic_launcher_background"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/likedbyimage2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_below="@+id/liketab"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="3.5dp"
                android:src="@drawable/ic_launcher_background"/>


            <TextView
                android:id="@+id/likedbytext"
                android:text="Liked by praveen and others"
                android:layout_below="@+id/liketab"
                android:layout_width="wrap_content"
                android:layout_marginLeft="64dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:padding="4dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/viewmore"
                android:text="more"
                android:layout_below="@+id/liketab"
                android:layout_width="50dp"
                android:layout_marginLeft="275dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:paddingStart="6dp"
                android:background="@drawable/view_more"
                android:layout_height="21dp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
